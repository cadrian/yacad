{
    "logging": {
        "level": "debug",
    },
    "core": {
        "root_path": "#PATH#/test/projects", // for tests
        "endpoint": "tcp://*:1789", // that is actually the default
    },
    "projects": [
        {
            "name": "test",
            "runner": {
                "arch": "foo",
            },
            "scm": {
                "type": "git",
                "upstream_url": "file://#PATH#/.git",
                "actions": [
                    {
                        "type": "checkout",
                        "branch": "${branch}",
                        "ref": "${ref}",
                    },
                    {
                        "type": "spawn",
                        "command": "make clean; build/build.sh main",
                        "artifacts": "target/dpkg/*.deb target/dpkg/*.dsc target/dpkg/*.tar.gz target/dpkg/*.changes",
                    },
                ],
            },
            "cron": "* * * * *",
        },
    ],
}
